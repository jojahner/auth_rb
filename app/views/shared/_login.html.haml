- user = User.new
= form_for(user, :url => session_path(user)) do |f|
  %div.field
    = f.label :login, t('.login')
    %br
    = f.text_field :login
  %div.field
    = f.label :password, t('.password')
    %br
    = f.password_field :password
  %div.field  
    = f.check_box :remember_me
    = f.label :remember_me
  %div.submit
    = f.submit t('.submit')